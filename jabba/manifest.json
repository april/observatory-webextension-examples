{

  "description": "HTTP observatory grade",
  "manifest_version": 2,
  "name": "http-observatory",
  "version": "1.0",
  "homepage_url": "https://github.com/april/observatory-webextension-examples",
  "icons": {
    "48": "icons/A+.svg"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "*://*/*", "tabs"
  ],

  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },

  "browser_action": {
    "default_icon": "icons/unknown.svg",
    "default_title": "Observatory Scan Results"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
