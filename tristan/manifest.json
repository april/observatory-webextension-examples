{

  "description": "HTTP Observatory Auto-calculator",
  "manifest_version": 2,
  "name": "http-observatory-tweir",
  "version": "1.0",
  "homepage_url": "https://github.com/april/observatory-webextension-examples/tristan",
  "icons": {
    "48": "pen.svg"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "tabs", "https://example.com/*"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "default.png"
    },
    "default_title": "HTTP Observatory"

  }, 

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
